<view class='body background_main'>
  <view class='header'>请填写邀约信息</view>
   
  <view class='footer'>
      <view class='form'>

          <text class='formname' >企业名称</text>
          <view>{{indexdata.company}}</view>
    </view>
    <view class='form'>

          <text class='formname' >提供岗位</text>
          <view>{{indexdata.function}}</view>

    </view>
     <view class='form'>
          <text class='formname' >面试开始时间</text>
         <view>{{indexdata.start_time_format}}</view>
    </view>
     <view class='form'>
          <text class='formname' >面试结束时间</text>
           <view>{{indexdata.end_time_format}}</view>
    </view>
     <view class='form'>
          <text class='formname'>面试地址</text>
           <view>{{indexdata.address}}</view>
    </view>
    <view class='form'>
          <text class='formname'>面试要求</text>
           <view>{{indexdata.content}}</view>
    </view>
    <view class='form'>
          <textarea  placeholder="请填写留言"  bindinput='bindWordLimit2'></textarea>
    </view>
    
  </view>
  <view class='btn btn_yellow btn_submit refuse' bindtap='btn_submit' data-action='no'>
    拒绝
    </view>
    <view class='btn btn_yellow btn_submit agree' bindtap='btn_submit' data-action='ok'>
    接受
    </view>
</view>
/* pages/companyInfo/companyInfo.wxss */
.body{
  min-height: 100vh;
  padding-bottom: 80rpx;
}
.title_main{
  position: relative;
  z-index: 20;
   width: 690rpx;
  height: 280rpx;
  top: 40rpx;
  margin-left: 30rpx;
}
.title_main_header image{
  width: 100rpx;
  height: 100rpx;
  vertical-align: top;
  margin-right: 30rpx;
}
.title_main_header{
  padding: 100rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box
}
.title_main_header>view{
  display: inline-block
}
.title_main_header .companyInfo .view1{
 font-size: 36rpx;
  color: #141414;
  line-height: 44rpx;
  font-weight: 800;
  margin-bottom: 30rpx;
  width:450rpx;
  position: relative;
  top: -20rpx;
  display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.title_main_header .companyInfo .view2{
font-size: 24rpx;
color:  #F9DC55;
margin-top: 10rpx
}
.title_main_header .companyInfo .view2 text{
  display: inline-block;
  margin-right: 25rpx;
}
.bg_img{
  width: 690rpx;
  height: 280rpx;
  margin-top: 40rpx;
  margin-left: 30rpx;
  position: absolute;
  z-index: 1
}
.cart_title view{
  width: 290rpx;
  height: 80rpx;
  display: inline-block;
  background: #F9DC55;
  color: #ffffff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  position: relative;
  top: 10px;
}
.cart_title .active{
    width: 400rpx;
  height: 100rpx;
  display: inline-block;
  background: #ffffff;
  text-align: center;
  line-height: 100rpx;
  color: #141414;
  font-size: 36rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}
.cart_title .view1 {
   border-top-left-radius: 20rpx;
}
.cart_title .view2{
   border-top-right-radius: 20rpx;
}
.body>.title{
  margin-bottom: 100rpx;
}
.cart{
  margin-left:30rpx; 
}
.cart_main{
  padding: 60rpx 30rpx;
  width: 690rpx;
  background: #ffffff;
  box-sizing: border-box;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}
.cart_main2{
  width: 690rpx;
  background: #ffffff;
  box-sizing: border-box;
    border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  overflow: hidden
}
.cart_main .cart_main_title{
  font-size: 36rpx;
  color: #000000;
  margin-bottom: 20rpx;
  font-weight: 800
}
.cart_main .cart_main_info{
 display:block;
  white-space: pre-wrap;
  color: #323232;
  font-size: 26rpx;  
  line-height: 50rpx;
}
.details_main .details_cart{
  margin-left: 0rpx;
  padding: 0;
  box-sizing: border-box;
  padding:20rpx;
  margin-bottom:10rpx;
}
.details_main{
  padding-bottom:0
}
.details_main .details_cart:not(:last-child){
  border-bottom: 20rpx solid #f5f5f5
}